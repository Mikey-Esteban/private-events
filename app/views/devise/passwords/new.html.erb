<div class="columns is-centered">
  <div class="column is-6">
    <h2>Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="field">
        <div class="control">
          <%= f.input :email, required: true, input_html: { class: "input", autocomplete: "email" }, wrapper: false,
            label_html: { class: "label" } %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.button :submit, "Send me reset password instructions", class: "button is-primary" %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
