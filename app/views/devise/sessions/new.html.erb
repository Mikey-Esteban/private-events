<div class="columns is-centered">
  <div class="column is-6">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <div class="control">
          <%= f.input :email, required: false, input_html: { class: "input", autocomplete: "email" }, wrapper: false,
            label_html: { class: "label" } %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :password, input_html: { class: "input" }, wrapper: false,
            label_html: { class: "label" }, input_html: { class: "input", autocomplete: "current-password" } %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :remember_me, wrapper: false, as: :boolean if devise_mapping.rememberable? %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.button :submit, 'Log in', class: "button is-primary" %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>

  </div>
</div>
